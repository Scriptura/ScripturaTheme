extends PatternLayouts

append variables
  _require_once_wp Functions/SetSingle

block content
  article.article(itemprop='mainEntityOfPage' itemscope itemtype='https://schema.org/Article')
    | {% $image %}
    #index-article
      .wrap
        .grid
          .m12
            h1.h2.vmin.emphasized(itemprop='name headline') {% $name %}
          .grid6.sizeS-grid12
            .links.protected(itemprop='articleBody') {% $content %}
            include Includes/Buttons
          aside.m6.sizeS-m12
            include Includes/Sidebar

block comments
  _if $capacityRead
  _if $comments OR $capacityCommentator AND $commentsOpen
  aside.aside#index-comments
    .wrap
      h2.vmin.emphasized {% $commentsTitle %}
        a.anchor(href='#index-comments')
      .grid
        _php $comments
        _endif
        _if $capacityCommentator AND $commentsOpen
        _php $commentForm
        _endif
  _endif
  .ajax-window-comments

block aside
  _if $relation
  aside.aside
    .wrap
      h2.vmin.emphasized {% $relationsTitle %}
      .relationship {% $relation %}
  _endif